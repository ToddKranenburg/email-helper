generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  name      String?
  picture   String?
  lastActiveAt        DateTime?
  lastBatchSyncAt     DateTime?
  lastBatchSyncStatus String?
  lastBatchSyncError  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  threadIndexes ThreadIndex[]
  summaries   Summary[]
  processings Processing[]
  googleToken GoogleToken?
  gmailAccount GmailAccount?
  actionFlows ActionFlow[]
  transcripts TranscriptMessage[]
}

model GmailAccount {
  userId          String   @id
  emailAddress    String
  historyCursor   String?
  watchExpiration DateTime?
  lastSyncAt      DateTime?
  lastInitialSyncAt DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ThreadIndex {
  threadId        String   @map("id")
  userId          String
  subject         String?
  participants    String?  // JSON string of addresses
  lastMessageDate DateTime @map("lastMessageTs")
  lastMessageId   String?
  fromName        String?
  fromEmail       String?
  inPrimaryInbox  Boolean  @default(true)
  unreadCount     Int      @default(0)
  snippet         String?
  gmailLabelIds   Json?
  lastGmailHistoryIdSeen String? @map("historyId")
  priorityScore   Float?
  priorityReason  String?
  suggestedActionType String?
  extracted       Json?
  unsubscribe     Json?
  lastScoredAt    DateTime?
  scoreVersion    String   @default("priority-v1")
  contentVersion  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  summaries    Summary[]
  processings  Processing[]
  actionFlows  ActionFlow[]
  transcripts  TranscriptMessage[]
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([threadId, userId])
  @@index([lastMessageDate])
  @@index([userId])
  @@map("Thread")
}

model Summary {
  id          String   @id @default(cuid())
  threadId    String
  userId      String
  lastMsgId   String
  headline    String   @default("")
  tldr        String
  category    String
  nextStep    String
  convoText   String   @default("")
  confidence  String
  createdAt   DateTime @default(now())
  threadIndex ThreadIndex   @relation(fields: [threadId, userId], references: [threadId, userId], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, lastMsgId])
  @@index([threadId, userId])
  @@index([userId, createdAt])
}

model Processing {
  threadId           String
  userId             String
  lastProcessedMsgId String
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  threadIndex        ThreadIndex   @relation(fields: [threadId, userId], references: [threadId, userId], onDelete: Cascade)

  @@id([threadId, userId])
}

model GoogleToken {
  userId       String   @id
  refreshToken String
  accessToken  String?
  scope        String?
  tokenType    String?
  expiryDate   DateTime?
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ActionFlow {
  id            String      @id @default(cuid())
  userId        String
  threadId      String
  actionType    String
  state         String      @default("suggested")
  draftPayload  String?
  lastMessageId String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  thread        ThreadIndex      @relation(fields: [threadId, userId], references: [threadId, userId], onDelete: Cascade)

  @@unique([userId, threadId])
  @@index([threadId, userId, updatedAt])
}

model TranscriptMessage {
  id        String         @id @default(cuid())
  userId    String
  threadId  String
  type      String
  content   String
  payload   String?
  createdAt DateTime       @default(now())
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  thread    ThreadIndex         @relation(fields: [threadId, userId], references: [threadId, userId], onDelete: Cascade)

  @@index([threadId, userId, createdAt])
}

model ThreadContentCache {
  userId        String
  threadId      String
  contentText   String
  contentVersion String
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())

  @@unique([userId, threadId])
  @@index([userId, updatedAt])
}

model PrioritizationBatch {
  id                 String   @id @default(cuid())
  userId             String
  status             String
  totalThreadsPlanned Int
  processedThreads   Int
  deferredThreads    Int
  startedAt          DateTime @default(now())
  finishedAt         DateTime?
  trigger            String

  @@index([userId, startedAt])
}

model DeferredPrioritization {
  id        String   @id @default(cuid())
  userId    String
  threadId  String
  reason    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, threadId])
  @@index([userId, createdAt])
}
