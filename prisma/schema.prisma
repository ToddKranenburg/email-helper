generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Thread {
  id             String   @id
  subject        String?
  participants   String
  lastMessageTs  DateTime
  historyId      String?
  fromName       String?
  fromEmail      String?

  updatedAt      DateTime @updatedAt
  summaries      Summary[]

  @@index([lastMessageTs])
}

model Summary {
  id          String   @id @default(cuid())
  threadId    String
  // NEW: tie summary to the latest Gmail message ID we processed
  lastMsgId   String   @unique
  tldr        String
  category    String
  nextStep    String
  confidence  String
  createdAt   DateTime @default(now())
  Thread      Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@index([threadId])
}

model Processing {
  threadId           String @id
  lastProcessedMsgId String
  updatedAt          DateTime @updatedAt
}
