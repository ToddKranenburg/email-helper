generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  name      String?
  picture   String?
  lastActiveAt        DateTime?
  lastBatchSyncAt     DateTime?
  lastBatchSyncStatus String?
  lastBatchSyncError  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  threads     Thread[]
  summaries   Summary[]
  processings Processing[]
  googleToken GoogleToken?
  actionFlows ActionFlow[]
  transcripts TranscriptMessage[]
}

model Thread {
  id            String
  userId        String
  subject       String?
  participants  String   // JSON string of addresses
  lastMessageTs DateTime
  historyId     String?
  fromName      String?
  fromEmail     String?

  updatedAt    DateTime     @updatedAt
  summaries    Summary[]
  processings  Processing[]
  actionFlows  ActionFlow[]
  transcripts  TranscriptMessage[]
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([id, userId])
  @@index([lastMessageTs])
  @@index([userId])
}

model Summary {
  id          String   @id @default(cuid())
  threadId    String
  userId      String
  lastMsgId   String
  headline    String   @default("")
  tldr        String
  category    String
  nextStep    String
  convoText   String   @default("")
  confidence  String
  createdAt   DateTime @default(now())
  Thread      Thread   @relation(fields: [threadId, userId], references: [id, userId], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, lastMsgId])
  @@index([threadId, userId])
  @@index([userId, createdAt])
}

model Processing {
  threadId           String
  userId             String
  lastProcessedMsgId String
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  Thread             Thread   @relation(fields: [threadId, userId], references: [id, userId], onDelete: Cascade)

  @@id([threadId, userId])
}

model GoogleToken {
  userId       String   @id
  refreshToken String
  accessToken  String?
  scope        String?
  tokenType    String?
  expiryDate   DateTime?
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ActionFlow {
  id            String      @id @default(cuid())
  userId        String
  threadId      String
  actionType    String
  state         String      @default("suggested")
  draftPayload  String?
  lastMessageId String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  thread        Thread      @relation(fields: [threadId, userId], references: [id, userId], onDelete: Cascade)

  @@unique([userId, threadId])
  @@index([threadId, userId, updatedAt])
}

model TranscriptMessage {
  id        String         @id @default(cuid())
  userId    String
  threadId  String
  type      String
  content   String
  payload   String?
  createdAt DateTime       @default(now())
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  thread    Thread         @relation(fields: [threadId, userId], references: [id, userId], onDelete: Cascade)

  @@index([threadId, userId, createdAt])
}
